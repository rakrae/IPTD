                     </children>
                     <padding>
                        <Insets left="10.0" top="20.0" />
                     </padding>
                  </VBox>
               </left>
               <center>
                  <VBox prefHeight="200.0" prefWidth="100.0" spacing="10.0" BorderPane.alignment="CENTER">
                     <children>
                        <TextField fx:id="accountTextField" opacity="0.7" prefHeight="25.0" prefWidth="301.0" promptText="Account">
                           <font>
                              <Font name="Arial Bold" size="12.0" />
                           </font>
                        </TextField>
                        <PasswordField fx:id="passwordTextField" opacity="0.7" promptText="Password">
                           <font>
                              <Font name="Arial Bold" size="12.0" />
                           </font>
                        </PasswordField>
                        <Button fx:id="login" mnemonicParsing="false" onAction="#handleLoginPressed" prefHeight="21.0" prefWidth="99.0" style="-fx-background-color: #ffffff;" text="Login">
                           <font>
                              <Font name="Arial Bold" size="16.0" />
                           </font>
                           <VBox.margin>
                              <Insets bottom="10.0" left="130.0" right="100.0" top="278.0" />
                           </VBox.margin>
                        </Button>
                        <Button fx:id="newAccount" mnemonicParsing="false" onAction="#handleNewAccountPressed" prefHeight="21.0" style="-fx-background-color: #ffffff;" text="New Account">
                           <font>
                              <Font name="Arial Bold" size="16.0" />
                           </font>
                           <VBox.margin>
                              <Insets left="112.0" />
                           </VBox.margin>
                        </Button>
                     </children>
                     <padding>
                        <Insets top="20.0" />
                     </padding>
                     <BorderPane.margin>
                        <Insets left="10.0" right="100.0" />
                     </BorderPane.margin>
                  </VBox>
               </center>
            </BorderPane>
         </children>
      </Pane>
   </children>
