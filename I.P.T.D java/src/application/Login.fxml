<AnchorPane prefHeight="504.0" prefWidth="528.0" xmlns="http://javafx.com/javafx/15.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.LoginController">
   <children>
      <Pane prefHeight="504.0" prefWidth="528.0">
         <children>
            <ImageView fitHeight="504.0" fitWidth="528.0">
               <image>
                  <Image url="@../../Programm%20Fotos/Горы.jfif" />
               </image>
            </ImageView>
            <BorderPane layoutX="-2.0" layoutY="-4.0" prefHeight="504.0" prefWidth="528.0">
               <top>
                  <Label text="Intelligent Progress Through Discipline" textFill="WHITE" BorderPane.alignment="CENTER">
                     <font>
                        <Font name="Arial Bold" size="22.0" />
                     </font>
                     <padding>
                        <Insets left="5.0" top="10.0" />
                     </padding>
                  </Label>
               </top>
               <left>
                  <VBox prefHeight="200.0" prefWidth="100.0" spacing="10.0" BorderPane.alignment="CENTER">
                     <children>
                        <Label text="Account:" textFill="WHITE">
                           <font>
                              <Font name="Arial Bold" size="19.0" />
                           </font>
                        </Label>
                        <Label text="Password:" textFill="WHITE">
                           <font>
                              <Font name="System Bold" size="19.0" />
                           </font>
                        </Label>
                        <Button fx:id="closeProgramm" mnemonicParsing="false" onAction="#handleClosePressed" prefHeight="34.0" prefWidth="68.0" style="-fx-background-color: #ffffff;" text="Close">
